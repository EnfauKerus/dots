label-muted = ###

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
time-format = %H:%M
label-charging = %percentage%% (%time%)
format-charging-prefix = "B+"
format-charging-prefix-foreground = ${colors.foreground-alt}
format-charging = <label-charging>
format-charging-overline = ${xrdb:color3}

label-discharging = %percentage%% (%time%)
format-discharging-prefix = "B-"
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging = <label-discharging>
format-discharging-overline = ${self.format-charging-overline}

format-full-prefix = "B:"
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-overline = ${self.format-charging-overline}




[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-overline = ${colors.temperature}
format-warn = <label-warn>
format-warn-overline = ${colors.temperature}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

