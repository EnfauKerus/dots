format-overline = ${colors.memory}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-overline = ${colors.network}
format-connected-prefix = "W:"
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %essid%

;format-disconnected =
format-disconnected = <label-disconnected>
format-disconnected-prefix = "W:"
format-disconnected-prefix-foreground = ${colors.foreground-alt}
;format-disconnected-overline = ${self.format-connected-overline}
label-disconnected = ?
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = "W:"
ramp-signal-1 = "W:"
ramp-signal-2 = "W:"
ramp-signal-3 = "W:"
ramp-signal-4 = "W:"
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-overline = ${colors.network}
format-connected-prefix = "E:"
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %ifname%
format-disconnected = <label-disconnected>
format-disconnected-prefix = "E:"
format-disconnected-prefix-foreground = ${colors.foreground-alt}
label-disconnected = ?
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%Y-%m-%d %H:%M:%S"

time = %H:%M:%S
time-alt = 

;format-prefix = D:
